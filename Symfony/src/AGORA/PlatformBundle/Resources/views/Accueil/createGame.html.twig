{% extends "AGORAPlatformBundle::layout.html.twig" %}
{% block title %}{{ parent() }} - {{ gameInfo.nom }} {% endblock %}

{% block header %}
    <h1>Création de partie pour le jeu {{ gameInfo.nom }}</h1>
{% endblock %}

{% block content %}
    <form method="post" action="{{ path('agora_game_create_' ~ gameInfo.gameCode) }}">
        <label>Nom du lobby</label>
        <input required type="text" name="lobbyName">
        <label>Nombre de joueurs</label>
        <input required type="number" min="{{ gameInfo.minJoueurs }}" max="{{ gameInfo.maxJoueurs }}" name="nbPlayers">
        <label>partie privée ?</label>
        <input id="check" type="checkbox" name="private" onclick="switch_visibility()">
        <label>Mot de passe</label>
        <input id="pass" type="password" name="password" disabled>
        <input type="submit" name="créer partie" value="OK">
    </form>
<script>
    function switch_visibility() {
        var pass = document.getElementById("pass");
        pass.disabled = false;
    }
</script>
{% endblock %}