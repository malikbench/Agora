                var powerList = {{ me.equivalences ?? null }};

                {% if game.getState() == "TwoLegionOnDoubleSword" and game.getAffectedPlayer() == me %}
                     actualTokens = ["double sword"];
                {% elseif game.getState() == "TwoLegionOnTeaches" and game.getAffectedPlayer() == me %}
