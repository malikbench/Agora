                        };
                    } else {
                        action.addToken.card = {};
                        action.addToken.card.ind = indCard;
                        action.addToken.token = {};
                        action.addToken.token.ind = indToken;
                        document.querySelectorAll(".cardAction").forEach( function (ee) {
