<div class="cards">
    {% for card in game.idCards %}
    <div class="box"><img class="card" src="{{ asset('bundles/agoragamesplendor/images/' ~ card ~ '.jpg') }}" alt="NO">
            <button id="reserveButton">Reserve</button><button id="buyButton">Buy</button></div>
